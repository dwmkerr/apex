<UserControl x:Class="PopupSample.SimplePopupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:apexControls="clr-namespace:Apex.Controls;assembly=Apex"
             Width="200"
             Height="300"
             Background="White"
             d:DesignHeight="400" d:DesignWidth="300">
    <Border Background="#F3F5F7" BorderBrush="#3A30FF">

        <apexControls:ApexGrid Rows="Auto,*,Auto">
            <Border Grid.Row="0" Background="#3A30FF">
                <TextBlock Text="Popup" Foreground="White" FontFamily="Segoe UI" FontWeight="Light" FontSize="24" Margin="8" HorizontalAlignment="Center" />
            </Border>
        <Button Grid.Row="1" x:Name="Close" Width="60" Height="20" Content="Close" Click="Close_Click" />
        </apexControls:ApexGrid>
    </Border>
</UserControl>
