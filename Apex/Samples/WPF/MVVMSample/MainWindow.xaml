<Window x:Class="MVVMSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MVVMSample"
        xmlns:apexCommands="clr-namespace:Apex.Commands;assembly=Apex"
        xmlns:simpleExample="clr-namespace:MVVMSample.SimpleExample"
        xmlns:viewBrokerSample="clr-namespace:MVVMSample.ViewBrokerSample"
        xmlns:commandingSample="clr-namespace:MVVMSample.CommandingSample"
        Title="Apex MVVM Samples" Height="500" Width="700">
    
    <!-- The datacontext for the window is an instance of our viewmodel. -->
    <Window.DataContext>
        <local:MainViewModel x:Name="viewModel" />
    </Window.DataContext>

    <TabControl Margin="4">
        <TabItem Header="Simple Sample">
            <simpleExample:SimpleExampleView />
        </TabItem>
        <TabItem Header="View Broker Sample">
            <viewBrokerSample:ViewBrokerSampleView />
        </TabItem>
        <TabItem Header="Commanding Sample">
            <commandingSample:CommandingSampleView />
        </TabItem>
    </TabControl>

</Window>
