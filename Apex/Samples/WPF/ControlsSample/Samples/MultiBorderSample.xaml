<UserControl x:Class="ControlsSample.Samples.MultiBorderSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:apexControls="clr-namespace:Apex.Controls;assembly=Apex"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <apexControls:MultiBorder Margin="40" 
                                          BorderBrushLeft="Red" BorderThicknessLeft="2"
                                          BorderBrushTop="Green" BorderThicknessTop="2"
                                          BorderBrushRight="Blue" BorderThicknessRight="2"
                                          BorderBrushBottom="Yellow" BorderThicknessBottom="2"
                                          Padding="20">
            <apexControls:MultiBorder.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0.1,1">
                    <GradientStop Offset="0" Color="#66f6aa00" />
                    <GradientStop Offset="1" Color="#00f6aa00" />
                </LinearGradientBrush>
            </apexControls:MultiBorder.Background>
            <TextBlock Text="Content" />
        </apexControls:MultiBorder>
    </Grid>
</UserControl>
