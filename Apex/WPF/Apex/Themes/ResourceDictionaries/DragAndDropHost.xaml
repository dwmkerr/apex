<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dragAndDrop="clr-namespace:Apex.DragAndDrop"
    xmlns:adorners="clr-namespace:Apex.Adorners">

    <Style TargetType="{x:Type dragAndDrop:DragAndDropHost}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type dragAndDrop:DragAndDropHost}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid x:Name="PART_Host">
                            <ContentPresenter />
                            <adorners:AdornerLayer x:Name="PART_AdornerLayer" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
