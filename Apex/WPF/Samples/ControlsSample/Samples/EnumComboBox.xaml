<UserControl x:Class="ControlsSample.Samples.EnumComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:apexControls="clr-namespace:Apex.Controls;assembly=Apex"
             xmlns:local="clr-namespace:ControlsSample.Samples"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.DataContext>
            <local:EnumComboBoxViewModel x:Name="viewModel" />
        </Grid.DataContext>
        <apexControls:PaddedGrid 
            Padding="6"
            Rows="Auto,Auto,Auto,Auto" Columns="*,2*">
            
            <TextBlock Grid.Row="0" Grid.Column="0" TextWrapping="Wrap" Text="Enum Combo Box" />
            <apexControls:EnumComboBox x:Name="ecb" Grid.Row="0" Grid.Column="1" SelectedItem="{Binding ExampleEnumeration}"
                                       EnumValue="{Binding ExampleEnumeration}"/>     
            <Button Grid.Row="1" Grid.Column="1" Content="Test" Click="Button_Click" />
            
        </apexControls:PaddedGrid>

    </Grid>
</UserControl>
